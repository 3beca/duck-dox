{
    "name": "duck-dox",
    "version": "0.0.1",
    "description": "Open API documentation platform",
    "main": "build/main.js",
    "scripts": {
        "build": "tsc -p tsconfig-build.json",
        "start": "node build/src/main.js",
        "start-dev": "cd src && ts-node main.ts --inspect=0.0.0.0:9229",
        "start-watch": "nodemon -L src/main.ts --inspect=0.0.0.0:9229 --exec ts-node",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
        "formatTest": "prettier --write \"test/**/*.+(js|jsx|ts|tsx|json)\"",
        "test": "jest --watchAll",
        "test:coverage": "jest --watchAll --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test-ci": "jest --collect-coverage",
        "publish-code-coverage": "codecov",
        "validate": "npm run format && npm run formatTest && npm run lint && npm run test-ci && npm run build"
    },
    "author": "juanjofp, francescorivola",
    "repository": "https://github.com/3beca/duck-dox",
    "license": "MIT",
    "devDependencies": {
        "@types/convict": "^6.0.1",
        "@types/jest": "^26.0.21",
        "@types/node": "^14.14.35",
        "@types/node-fetch": "^2.5.8",
        "@types/pino": "^6.3.6",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-filenames": "^1.3.2",
        "husky": "^5.2.0",
        "jest": "^26.6.3",
        "jest-watch-typeahead": "^0.6.1",
        "nock": "^13.0.11",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "convict": "^6.0.1",
        "fastify": "^3.14.0",
        "make-promises-safe": "^5.1.0",
        "pino": "^6.11.2"
    }
}
