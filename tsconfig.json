{
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "noImplicitAny": true,
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "build",
        "watch": false,
        "lib": ["es2018"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "strict": true
    }
}
